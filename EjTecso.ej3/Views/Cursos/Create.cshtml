                @Html.EditorFor(model => model.CupoMaximo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CupoMaximo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDDocente, "IDDocente", htmlAttributes: new { @class = "control-label col-md-2" })
