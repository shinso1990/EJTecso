@model EjTecso.ej3.Curso

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alta de Curso</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
